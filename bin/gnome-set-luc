# ------------------------------------------------------------------------------ # skróty klawiaturowe
# open terminal
gconftool-2 -s /apps/metacity/global_keybindings/run_command_terminal -t str "<Alt>F3"
# pokaż desk
gconftool-2 -s /apps/metacity/global_keybindings/show_desktop -t str "<Super>d"
# ------------------------------------------------------------------------------
# reszta skrótów
nr=1
_run_key(){
	gconftool-2 -s /apps/metacity/keybinding_commands/command_${nr} -t str "${1}"
	gconftool-2 -s /apps/metacity/global_keybindings/run_command_${nr} -t str "${2}"
	nr=$(($nr+1))
}
# ------------------------------------------------------------------------------ 
_run_key "gconf-editor" "<Super>F1"
_run_key "gnome-system-monitor" "<Super>F2"
_run_key "yumex" "<Super>F3"
_run_key "nautilus" "<Super>F4"

_run_key "gvim" "<Super>F5"
_run_key "emacs" "<Super>F6"
_run_key "eclipse" "<Super>F7"
_run_key "geany-ide" "<Super>F8"

_run_key "kydpdict" "<Super>F9"
_run_key "audacious" "<Super>F10"
_run_key "gnome-search-tool" "<Super>F11"
_run_key "nautilus arch/win" "<Super>e"
_run_key "xp on" "<Super><Shift>x"

# ------------------------------------------------------------------------------
# klawisz F10 w gnome-terminal
gconftool-2 -s /apps/gnome-terminal/global/use_menu_accelerators -t bool false

# pokazuj wszystkie uprawnienia w nautilusie
gconftool-2 -s /apps/nautilus/preferences/show_advanced_permissions -t bool true

echo "OK, poszło. Wszystkie opcje: 	gconftool-2 --help-all"

# Backup !!!
#gconftool-2 -R / > gnome-org
