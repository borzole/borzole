#!/bin/bash
#
#

ancho=$(zenity --title 'Exportar SVG como PNG' --text 'Ancho de la imagen: ' --entry)
alto=$(zenity --title 'Exportar SVG como PNG' --text 'Alto de la imagen: ' --entry)
if [ $# -eq 0 ]; then
archivos=$(zenity --text 'Directorio: ' --file-selection --multiple)
archivos=${archivos//|/ }
else
archivos=$@
fi

for f in $archivos ; do
	if [ "$(file -i "$f")"="image/svg+xml" ]; then
		inkscape "$f" -e "${f/.svg/.png}" -w "$ancho" -h "$alto"
	fi
done

