#!/bin/bash

# by borzole.one.pl

DIR="$HOME/studio/art/music"
# Lista MP3
desk="$HOME/desk"

rm -f "$desk"/all.m3u
rm -f "$desk"/ost.m3u

# all
find "$DIR" -iname \*.mp3 | sort -u >> "$desk"/all.m3u

# ost
find "$DIR"  -mindepth 1 -maxdepth 1 -xtype d -iname [0-9]\* -exec \
	find '{}' -iname \*.mp3 >> "$desk"/ost.m3u \;
