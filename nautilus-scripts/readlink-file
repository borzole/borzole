#!/bin/bash

# readlink-file : otwiera folder zawierający plik do którego prowadzi link symboliczny


while read -r path  ; do
	if [ ${#path} != 0 ] ; then
		abs=$(readlink -f "$path")
		file=${abs%/*}
		#~ zenity --error --text="$path"
		xdg-open "$file"
	fi
done < <(IFS=$'\n' echo -e "$NAUTILUS_SCRIPT_SELECTED_FILE_PATHS")
exit
